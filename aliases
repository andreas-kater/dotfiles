SCRIPTS_PATH='~/dev/dotfiles/scripts'

alias dvelp='~/code/underlay/bin/dvelp'
alias d='~/code/underlay/bin/dvelp'
alias '$'=''

# General
alias c=clear

# Scripts
alias mc=$SCRIPTS_PATH/mc.sh
alias clasp-start=~/Dev/clasp/my-macros/clasp-start.sh
alias pss=$SCRIPTS_PATH/paste-screenshot.sh

#Budler
alias be='bundle exec'

#Directories
alias home='cd ~/'

#GIT
alias gap='git add --patch'
alias gb='git --no-pager branch'
alias gbo=$SCRIPTS_PATH/git_branch_out.sh
alias gc='git checkout'
alias gcm='git add --all && git commit -m'
alias gcmp=$SCRIPTS_PATH/git_commit_merge_push.sh
alias gcp='git cherry-pick'
alias gd='git diff origin/master'
alias gdb='git checkout master && git checkout master && git branch -D'
alias gdrb='git push --delete'
alias gfp=$SCRIPTS_PATH/git_fix_push.sh
alias git=hub
alias gl='git --no-pager log --oneline --decorate --graph --all -n 20'
alias glcw='git log -E -i --grep'
alias gmp=$SCRIPTS_PATH/git_merge_pull_request.sh
alias gpp='production deploy'
alias gpr='git pull-request -c'
alias gprb='git checkout --track'
alias gps='staging deploy'
alias grbi='git rebase -i'
alias gs='git status'
alias gsf='git show --pretty="" --name-only'
alias gu=$SCRIPTS_PATH/git_update.sh
alias unstage='reset'

#Heroku
alias hc='staging console'
alias hcp='production console'
alias hm='staging migrate'
alias hmp='production migrate'
alias hlg='staging tail'
alias hlgp='production tail'
alias hsc=$SCRIPTS_PATH/heroku_sync_config.sh

#NGROK
alias ngk='~/code/src/ngrok http'

#PARITY
alias drp='development restore production'
alias drs='development restore staging'

#Rails
alias rc='rails c'
alias rg='rails g'

#Rails-rake
alias rk='rake'
alias rkm='rake db:migrate'
alias rkr='rake db:rollback'
alias rks='rake db:setup'

#Rails-rspec
alias rspc='rspec spec'

#TMUX
alias tmux-session-switch=$SCRIPTS_PATH/tmux-session-switch.sh

#Tree
alias t='tree'
alias tree='tree -I node_modules|venv'

#VIM
alias v='vim'

#ZSH
alias relaod=". ~/.zshrc && echo 'ZSH config reloaded from ~/.zshrc'"
alias reload=". ~/.zshrc && echo 'ZSH config reloaded from ~/.zshrc'"
